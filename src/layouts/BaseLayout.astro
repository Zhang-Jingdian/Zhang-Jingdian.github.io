---
import '@/styles/global.css';
import BaseHead from '@/components/BaseHead';
import BaseHeader from '@/components/BaseHeader';
import BaseFooter from '@/components/BaseFooter';
import type { ImageMetadata } from 'astro';

interface Props {
	title: string;
	description?: string;
	keywords?: string[];
	image?: ImageMetadata | string;
}

const { title, description, keywords, image } = Astro.props;
---

<!DOCTYPE html>
<html lang="zh-CN">
	<head>
		<BaseHead title={title} description={description} keywords={keywords} image={image} />
	</head>
	<body class="min-h-screen bg-white text-neutral-900 antialiased">
		<!-- 页头导航 - 页面加载时立即渲染 -->
		<BaseHeader client:load />
		
		<!-- 主内容区（子布局会插入这里） -->
		<slot />
		
		<!-- 页脚 - 进入视口时才加载（性能优化） -->
		<BaseFooter client:visible />
	</body>
</html>
