---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { SITE_CONFIG } from '@/config';
import FormattedDate from '@/components/FormattedDate/FormattedDate.vue';
import { Image } from 'astro:assets';

// 获取最新的 6 篇博客文章
const posts = (await getCollection('blog'))
	.sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
	.slice(0, 6);
---

<BaseLayout title={`首页 - ${SITE_CONFIG.title}`}>
	<div class="mx-auto max-w-6xl px-4 py-12">
		<!-- Hero Section -->
		<div class="mb-16 text-center">
			<h1 class="mb-6 text-6xl font-bold tracking-tight text-neutral-900">
				{SITE_CONFIG.title}
			</h1>
			<p class="mx-auto mb-8 max-w-2xl text-xl text-neutral-600">
				{SITE_CONFIG.description}
			</p>
			<div class="flex items-center justify-center gap-4">
				<a
					href="/blog"
					class="rounded-lg bg-neutral-900 px-6 py-3 font-medium text-white transition-colors hover:bg-neutral-700"
				>
					浏览博客
				</a>
				<a
					href="/about"
					class="rounded-lg border border-neutral-300 px-6 py-3 font-medium text-neutral-900 transition-colors hover:border-neutral-900"
				>
					关于我
				</a>
			</div>
		</div>

		<!-- Latest Posts Section -->
		{posts.length > 0 && (
			<section>
				<div class="mb-8 flex items-center justify-between">
					<h2 class="text-3xl font-bold text-neutral-900">最新文章</h2>
					<a
						href="/blog"
						class="text-sm font-medium text-neutral-600 transition-colors hover:text-neutral-900"
					>
						查看全部 →
					</a>
				</div>

				<div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
					{posts.map((post) => (
						<article class="group flex flex-col overflow-hidden rounded-lg border border-neutral-200 transition-all hover:shadow-xl">
							{/* 封面图片 */}
							{post.data.heroImage && (
								<a href={`/blog/${post.id}`} class="block overflow-hidden">
									<Image
										src={post.data.heroImage}
										alt={post.data.title}
										width={400}
										height={225}
										class="h-48 w-full object-cover transition-transform duration-300 group-hover:scale-105"
										loading="lazy"
										format="webp"
										quality={80}
									/>
								</a>
							)}
							
							{/* 文章信息 */}
							<div class="flex flex-1 flex-col gap-3 p-6">
								{/* 日期 */}
								<div class="text-sm text-neutral-500">
									<FormattedDate date={post.data.publishDate} client:load />
								</div>
								
								{/* 标题 */}
								<h3 class="text-xl font-semibold text-neutral-900">
									<a 
										href={`/blog/${post.id}`} 
										class="transition-colors hover:text-neutral-600"
									>
										{post.data.title}
									</a>
								</h3>
								
								{/* 描述 */}
								{post.data.description && (
									<p class="line-clamp-2 text-sm text-neutral-600">
										{post.data.description}
									</p>
								)}
								
								{/* 标签 */}
								{post.data.tags?.length > 0 && (
									<div class="mt-auto flex flex-wrap gap-2">
										{post.data.tags.slice(0, 3).map((tag: string) => (
											<span class="rounded-full bg-neutral-100 px-2 py-1 text-xs text-neutral-600">
												{tag}
											</span>
										))}
									</div>
								)}
								
								{/* 阅读更多 */}
								<a
									href={`/blog/${post.id}`}
									class="mt-2 inline-flex items-center text-sm font-medium text-neutral-900 transition-colors hover:text-neutral-600"
								>
									阅读全文
									<svg class="ml-1 h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
									</svg>
								</a>
							</div>
						</article>
					))}
				</div>
			</section>
		)}

		{/* 空状态 */}
		{posts.length === 0 && (
			<div class="flex min-h-[400px] flex-col items-center justify-center rounded-lg border-2 border-dashed border-neutral-200">
				<svg class="mb-4 h-16 w-16 text-neutral-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
				</svg>
				<p class="text-lg text-neutral-500">暂无文章</p>
				<p class="mt-2 text-sm text-neutral-400">开始创建你的第一篇博客吧！</p>
			</div>
		)}
	</div>
</BaseLayout>

